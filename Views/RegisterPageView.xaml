            <Button
                x:Name="SignUpBtn"
                Text="Sign Up"
                Command="{Binding SignupRegisterCommand}"
                SemanticProperties.Hint="You can login to your account!"
                WidthRequest="100"
                CornerRadius="50"
                TextColor="Black"
                FontAttributes="Bold"
                BackgroundColor="Red"
                HorizontalOptions="Center"
                Clicked="SignUpBtn_Clicked"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>